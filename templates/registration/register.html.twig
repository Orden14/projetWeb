
{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>S'enregistrer</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'form-group'}}) }}
            <div class="form-group">
                {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password',
                    'attr': {'class': 'form-control'}
                }) }}
            </div>

            <button type="submit" class="btn btn-primary cmargintop">S'enregistrer</button>
        {{ form_end(registrationForm) }}
    </div>   
{% endblock %}