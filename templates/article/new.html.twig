
{% extends 'base.html.twig' %}

{% block title %}Ajouter un article{% endblock %}

{% block body %}
    <div class="container mt-5" data-controller="new-article">
        <h1>Ajouter un article</h1>

        <form id="article-form" data-action="submit->new-article#submit">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" data-new-article-target="title" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" data-new-article-target="description" class="form-control" required></textarea>
            </div>

            <div class="mb-3">
                <label for="body" class="form-label">Body</label>
                <textarea id="body" data-new-article-target="body" class="form-control" rows="5" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Enregistrer</button>
        </form>

        <div id="form-response" data-new-article-target="response" class="mt-3"></div>
    </div>
{% endblock %}
