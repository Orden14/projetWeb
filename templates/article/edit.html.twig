{% extends 'base.html.twig' %}

{% block title %}Modifier un article{% endblock %}

{% block body %}
    <div class="container mt-5" data-controller="article-form"
         data-article-form-article-id-value="{{ article.id }}">
        <h1>Modifier un article</h1>

        <form id="article-form" data-action="submit->article-form#submit">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" id="title" data-article-form-target="title" 
                       class="form-control" value="{{ article.title }}" required>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" data-article-form-target="description" 
                          class="form-control" required>{{ article.description }}</textarea>
            </div>

            <div class="mb-3">
                <label for="body" class="form-label">Body</label>
                <textarea id="body" data-article-form-target="body" 
                          class="form-control" rows="5" required>{{ article.body }}</textarea>
            </div>

            <button type="submit" class="btn btn-primary"> Modifier </button>
        </form>

        <div id="form-response" data-article-form-target="response" class="mt-3"></div>
    </div>
{% endblock %}
